                            div(class='detail') Cost-effective platform, no finders fees or job percentages charged.
                            span
                                img(src='/static/images/landing-page/check-circle.svg' alt='')
                        div(class='feature')
                            div(class='detail') Upscale or downscale your workforce on demand.
                            span
                                img(src='/static/images/landing-page/check-circle.svg' alt='')
                        div(class='feature')
                            div(class='detail') Reach out for extra personnel on short notice.
                            span
                                img(src='/static/images/landing-page/check-circle.svg' alt='')
                    img(class='d-md-none' src='/static/images/landing-page/mobile-app3.png' alt='')
                div(class='center-content d-md-block d-none')
                    img(src='/static/images/landing-page/mobile-app2.png' alt='')
                div(class='right-content')
                    img(class='d-md-none' src='/static/images/landing-page/mobile-app4.png' alt='')
                    div(class='feature-list')
                        div(class='feature-line')
                        div(class='feature')
                            span
                                img(src='/static/images/landing-page/check-circle.svg' alt='')
                            div(class='detail') Direct schedule your full-time staff.
                        div(class='feature')
                            span
                                img(src='/static/images/landing-page/check-circle.svg' alt='')
                            div(class='detail') In-app group chat and file sharing.
                        div(class='feature')
                            span
                                img(src='/static/images/landing-page/check-circle.svg' alt='')
                            div(class='detail') Marketplace for employment.
                        div(class='feature')
                            span
                                img(src='/static/images/landing-page/check-circle.svg' alt='')
                            div(class='detail') Negotiate your rates in real time.
                        div(class='feature')
                            span
                                img(src='/static/images/landing-page/check-circle.svg' alt='')
                            div(class='detail') Be in control of your workload.
        include layout/footer

        script(src='/static/js/jquery-3.4.1.min.js')
        script(src='/static/js/particles.min.js')
        script(src='/static/js/toastr.min.js')
        script.
            const urlParams = new URLSearchParams(window.location.search);
            const successCode = urlParams.get('successCode');
            const errorCode = urlParams.get('errorCode');

            if (window.location.href.indexOf("successCode") != -1) {
                const now = new Date().valueOf();
                setTimeout(function () {
                    if (new Date().valueOf() - now > 100) return;
                    window.location = "https://www.crewpond.com/";
                }, 25);
                window.location = "crewpond://account_verified";
            }

            if (successCode === '0') {
                toastr.success('Your account has been verified successfully.', 'Success');
            } else if (successCode === '1') {
                toastr.success('Password has been updated successfully.', 'Success');
            }
            if (errorCode === '0') {
                toastr.error('Oops, Something went wrong!!!', 'Error');
            } else if (errorCode === '3' || errorCode === '10') {
                toastr.error('Invalid information was provided.', 'Error');
            } else if (errorCode === '4') {
                toastr.error('Your request was expired. Password reset request should be done in 10 minutes.', 'Error');
            } else if (errorCode === '20') {
                toastr.error('Your account is not confirmed. Please check your email or junk to confirm your account.', 'Error');
            } else if (errorCode === '21') {
                toastr.error('Your account was closed. Please contact support for more assistance.', 'Error');
            } else if (errorCode === '22') {
                toastr.error('Your account was suspended. Please contact support for more assistance.', 'Error');
            } else if (errorCode === '23') {
                toastr.error('Your account was deleted. Please contact support for more assistance.', 'Error');
            }
            particlesJS("header", {
                "particles": {
                    "number": {
                        "value": 100
                    },
                    "color": {
                        "value": "#ffffff"
                    },
                    "shape": {
                        "type": "circle",
                        "stroke": {
                            "width": 0,
                            "color": "#000000"
                        },
                        "polygon": {
                            "nb_sides": 5
                        }
                    },
                    "opacity": {
                        "value": 0.5,
                        "random": false,
                        "anim": {
                            "enable": false,
                            "speed": 1,
                            "opacity_min": 0.1,
                            "sync": false
                        }
                    },
                    "size": {
                        "value": 5,
                        "random": true,
                        "anim": {
                            "enable": false,
                            "speed": 40,
                            "size_min": 2,
                            "sync": false
                        }
                    },
                    "line_linked": {
                        "enable": true,
                        "distance": 150,
                        "color": "#ffffff",
                        "opacity": 0.4,
                        "width": 1
                    },
                    "move": {
                        "enable": true,
                        "speed": 3,
                        "direction": "none",
                        "random": false,
                        "straight": false,
                        "out_mode": "out",
                        "bounce": false,
                        "attract": {
                            "enable": false,
                            "rotateX": 600,
                            "rotateY": 1200
                        }
                    }
                }
            });
